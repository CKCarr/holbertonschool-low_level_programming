#include "holberton.h"
/**
* _strcmp- function that compares 2 strings.
*
*@s1: string one
*@s2: string two
*
* Return: 0 if =, 1 if >, and -1 if <.
*/
int _strcmp(char *s1, char *s2)
{
	int index;

	for ( index = 0;; index++)
	{
		if( s1[index] == '\0' && s2[index] == '\0')
		{
			return (0);
		}
		
		int asc1 = int s1[index];
		int asc2 = int s2[index];
		
		if (asc1 > asc2)
		{
			return (1);
		}
		if (asc2 > asc1)
		{
			return(-1);
		}
	}
}
